<Window x:Class="bossfighter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bossfighter"
        mc:Ignorable="d"
        Title="Dungeon" Height="450" Width="800">
    <StackPanel Background="Gray">
        <TextBlock Foreground="Cyan" TextAlignment="Center" FontSize="65">Dungeon</TextBlock>
        <Label Foreground="Cyan" HorizontalAlignment="Center" FontSize="25">Enter your name</Label>

        <TextBox x:Name="user1" Background="Black" Foreground="White" Width="300" Height="30" Margin="0,0,0,15" KeyDown="Label_KeyDown"></TextBox>
        <Button x:Name="continue" Background="Black" Foreground="White" Width="300" Height="60" Click="continue_Click">Continue</Button>
    </StackPanel>
</Window>
